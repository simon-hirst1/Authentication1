@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgotten Password";
    Layout = "_AccountLayout";
}

<div class="d-flex justify-content-center">
    <h2>Forgot your password?</h2>
</div>
<hr />
<div class="d-flex flex-column justify-content-center align-items-center text-center">
    <p>Please provide the email address you registered with and we will send you an email with instructions on how to reset your password.</p>
    <form asp-controller="Account" asp-action="ForgotPasswordConfirm" method="post" class="w-75">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-center align-items-center">
            <button id="submit" type="submit" class="btn btn-primary">Reset</button>
        </div>
    </form>
</div>
